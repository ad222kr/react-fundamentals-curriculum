{
  "extends": "airbnb",
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0]
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "plugins":[
    "react"
  ],
  "rules": {
    "quotes": [0, "double"],
    "semi": ["error", "always"],
    "react/no-unknown-property": [1, { "ignore": ["class"] } ],
    "react/require-render-return": 0,
    "arrow-body-style": ["error", "always"],
    "react/jsx-uses-vars": 1

  }
}
